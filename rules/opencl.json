{
  "patterns": ["\\bopencl\\b"],
  "dependencies": [
    {
      "packages": ["ocl-icd-opencl-dev"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["ocl-icd", "opencl-headers"],
      "pre_install": [
        {
          "command": "yum install -y epel-release"
        }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos"
        }
      ]
    },
    {
      "packages": ["ocl-icd", "opencl-headers"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "redhat"
        }
      ]
    },
    {
      "packages": ["libOpenCL1", "opencl-headers"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "opensuse"
        }
      ]
    }
  ]
}