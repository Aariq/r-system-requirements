{
  "patterns": ["\\blibpng\\b"],
  "dependencies": [
    {
      "packages": ["libpng-dev"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["libpng-devel"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos"
        },
        {
          "os": "linux",
          "distribution": "redhat"
        }
      ]
    },
    {
      "packages": ["libpng16-devel"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "opensuse"
        },
        {
          "os": "linux",
          "distribution": "sle"
        }
      ],
      "post_install": [
        {
          "command": "ln -s /usr/bin/libpng16-config /usr/bin/libpng-config"
        }
      ]
    }
  ]
}
