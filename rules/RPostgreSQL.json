{
  "patterns": ["\\bRPostgreSQL\\b"], 
  "dependencies": [
    {
      "packages": ["RPostgreSQL"],
      "pre_install": [
      {
        "command": "yum install -y postgresql-devel"
        }
      ],
      "constraints": [
      {
        "os": "linux",
        "distribution": "centos",
        "versions": ["7"]
        }
      ]
    }
  ]
}
