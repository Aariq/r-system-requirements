{
  "patterns": [
    "\\b[cC]hrome\\b\\s+\\b[bB]rowser\\b",
    "\\b[gG]oogle\\b\\s+\\b[cC]hrome\\b"
  ],
  "dependencies": [
    {
      "pre_install": [
        { "command": "if [ -z $(which google-chrome) ]; then wget -O - https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb > /tmp/google-chrome.deb; fi" },
        { "command": "if [ -z $(which google-chrome) ]; then DEBIAN_FRONTEND='noninteractive' apt-get install -y /tmp/google-chrome.deb; fi" }
      ],
      "packages": [],
      "post_install": [
        { "command": "[ -e /tmp/google-chrome.deb ] && rm /tmp/google-chrome.deb" }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu",
          "versions": ["16.04", "20.04"]
        }
      ]
    },
    {
      "pre_install": [
        { "command": "echo 'Can not successfully install Google Chrome'" }
      ],
      "packages": [],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu",
          "versions": ["18.04"]
        }
      ]
    },
    {
      "pre_install": [
        { "command": "yum install -y which" },
        { "command": "if [ -z $(which google-chrome) ]; then wget -O - https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm > /tmp/google-chrome.rpm; fi" },
        { "command": "if [ -z $(which google-chrome) ]; then yum install -y /tmp/google-chrome.rpm; fi" }
      ],
      "packages": [],
      "post_install": [
        { "command": "[ -e /tmp/google-chrome.rpm ] && rm /tmp/google-chrome.rpm" }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos"
        }
      ]
    }
  ]
}
