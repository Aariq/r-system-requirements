{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "version": "1.0.0",
  "properties": {
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pre_install": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "command"
                  ]
                },
                {
                  "required": [
                    "script"
                  ]
                }
              ]
            }
          },
          "post_install": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "command"
                  ]
                },
                {
                  "required": [
                    "script"
                  ]
                }
              ]
            }
          },
          "packages": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "constraints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/definitions/debian"
                },
                {
                  "$ref": "#/definitions/ubuntu"
                },
                {
                  "$ref": "#/definitions/centos"
                },
                {
                  "$ref": "#/definitions/redhat"
                },
                {
                  "$ref": "#/definitions/opensuse"
                },
                {
                  "$ref": "#/definitions/sle"
                }
              ]
            }
          }
        },
        "required": [
          "packages"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "patterns",
    "dependencies"
  ],
  "additionalProperties": false,
  "definitions": {
    "versions": {
      "debian": {
        "enum": [
          "8",
          "9"
        ]
      },
      "ubuntu": {
        "enum": [
          "16.04",
          "18.04"
        ]
      },
      "centos": {
        "enum": [
          "6",
          "7"
        ]
      },
      "redhat": {
        "enum": [
          "6",
          "7"
        ]
      },
      "opensuse": {
        "enum": [
          "42.3",
          "15.0"
        ]
      },
      "sle": {
        "enum": [
          "12.3",
          "15.0"
        ]
      }
    },
    "debian": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "debian"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/debian"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    },
    "ubuntu": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "ubuntu"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/ubuntu"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    },
    "centos": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "centos"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/centos"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    },
    "redhat": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "redhat"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/redhat"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    },
    "opensuse": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "opensuse"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/opensuse"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    },
    "sle": {
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "sle"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/sle"
          }
        }
      },
      "required": [
        "os"
      ],
      "additionalProperties": false
    }
  }
}